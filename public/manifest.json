{
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "19": "logo192.png",
      "38": "logo192.png"
    },
    "default_title": "HBC wallet",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content-script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],

  "description": "HBC WALLET",

  "icons": {
    "48": "logo192.png",
    "96": "logo192.png"
  },

  "manifest_version": 2,

  "name": "HBC wallet",

  "permissions": ["webNavigation", "tabs", "activeTab", "storage"],

  "version": "0.1"
}
