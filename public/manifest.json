{
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "16": "icon_32.png",
      "32": "icon_96.png"
    },
    "default_title": "HBTC wallet",
    "default_popup": "index.html#/index"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content-script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],

  "description": "HBTC WALLET",

  "icons": {
    "48": "icon_48.png",
    "96": "icon_96.png"
  },

  "manifest_version": 2,

  "name": "HBTC wallet",
  "author": "https://hbtcchain.io/",

  "permissions": ["webNavigation", "tabs", "activeTab", "storage"],

  "version": "1.0"
}
